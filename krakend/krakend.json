{
  "$schema": "http://www.krakend.io/schema/v2.json",
  "version": 3,
  "name": "KrakenD API Gateway",
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/orders/getall",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://node-app:9090"],
          "url_pattern": "/orders",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/orders/get/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://node-app:9090"],
          "url_pattern": "/orders/{id}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/orders/add",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://node-app:9090"],
          "url_pattern": "/orders",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/orders/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://node-app:9090"],
          "url_pattern": "/orders/{id}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/produits/getall",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://spring-app:8080"],
          "url_pattern": "/produits",
          "encoding": "json"
        }
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-metrics": {
          "type": "none"
        }
      }
    },
    {
      "endpoint": "/produits/add",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://spring-app:8080"],
          "url_pattern": "/produits",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/produits/get/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://spring-app:8080"],
          "url_pattern": "/produits/{id}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/produits/update/{id}",
      "method": "PUT",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://spring-app:8080"],
          "url_pattern": "/produits/{id}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/produits/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://spring-app:8080"],
          "url_pattern": "/produits/{id}",
          "encoding": "json"
        }
      ]
    }
  ]
}
